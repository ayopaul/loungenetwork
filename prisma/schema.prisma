generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id         String     @id
  name       String
  streamUrl  String
  posts      Post[]
  oaps       OAP[]
  schedules  Schedule[]
  categories Category[]
}

model Post {
  id         String   @id @default(cuid())
  title      String
  slug       String
  excerpt    String?
  content    String?
  coverImage String?
  published  Boolean  @default(false)
  stationId  String
  station    Station  @relation(fields: [stationId], references: [id])
  categoryId String   @default("default-category")
  category   Category @relation("CategoryToPosts", fields: [categoryId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([slug, stationId], name: "slug_stationId")
}

model Category {
  id        String  @id @default(cuid())
  name      String
  slug      String
  visible   Boolean
  stationId String
  station   Station @relation(fields: [stationId], references: [id])
  posts     Post[]  @relation("CategoryToPosts")

  @@unique([slug, stationId], name: "slug_stationId")
}

model OAP {
  id        String   @id @default(cuid())
  name      String
  slug      String
  bio       String
  photoUrl  String
  shows     String[]
  stationId String
  station   Station  @relation(fields: [stationId], references: [id])

  @@unique([slug, stationId])
}

model Schedule {
  id           String  @id @default(cuid())
  showTitle    String
  slug         String
  startTime    String
  endTime      String
  description  String
  thumbnailUrl String
  weekday      Int
  stationId    String
  station      Station @relation(fields: [stationId], references: [id])
}
